@model SystemOdonto.Models.Paciente

@{
    ViewData["Title"] = "Editar Paciente";
}

<h2 class="text-center">Editar Paciente</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Direccion" class="control-label"></label>
        <input asp-for="Direccion" class="form-control" />
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Telefono" class="control-label"></label>
        <input asp-for="Telefono" class="form-control" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TipoTratamiento" class="control-label"></label>
        <input asp-for="TipoTratamiento" class="form-control" />
        <span asp-validation-for="TipoTratamiento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaInicioTratamiento" class="control-label"></label>
        <input asp-for="FechaInicioTratamiento" type="date" class="form-control" />
        <span asp-validation-for="FechaInicioTratamiento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PagoInicial" class="control-label"></label>
        <input asp-for="PagoInicial" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="PagoInicial" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mensualidad" class="control-label"></label>
        <input asp-for="Mensualidad" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Mensualidad" class="text-danger"></span>
    </div>

    <h3>Tratamientos Adicionales</h3>
    @if (Model.TratamientosAdicionales != null && Model.TratamientosAdicionales.Any())
    {
        <ul class="list-group">
            @for (int i = 0; i < Model.TratamientosAdicionales.Count; i++)
            {
                <li class="list-group-item">
                    <div class="form-group">
                        <label>Nombre del Tratamiento</label>
                        <input asp-for="TratamientosAdicionales[i].Nombre" class="form-control" />
                        <span asp-validation-for="TratamientosAdicionales[i].Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Costo</label>
                        <input asp-for="TratamientosAdicionales[i].Costo" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="TratamientosAdicionales[i].Costo" class="text-danger"></span>
                    </div>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No hay tratamientos adicionales registrados.</p>
    }

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
